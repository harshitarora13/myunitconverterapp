<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onClick"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/Layout1"
        android:layout_width="397dp"
        android:layout_height="109dp"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.96">

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/buttonLength"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:background="#FFFFFF"
            android:onClick="onClick"
            android:src="@drawable/ruler" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/buttonTemp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:background="#FFFFFF"
            android:onClick="onClick"
            android:src="@drawable/temp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/buttonWeight"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:background="#FFFFFF"
            android:onClick="onClick"
            android:src="@drawable/weight" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Layout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Spinner
            android:id="@+id/spinnerOptions"
            android:layout_width="118dp"
            android:layout_height="61dp" />

        <EditText
            android:id="@+id/editUserInput"
            android:layout_width="228dp"
            android:layout_height="61dp"
            android:ems="10"
            android:hint="Enter a value"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewUnit1"
        android:layout_width="147dp"
        android:layout_height="32dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="28dp"
        android:textColor="@color/purple_200"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Layout3" />

    <TextView
        android:id="@+id/textViewResult1"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="152dp"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Layout3" />

    <TextView
        android:id="@+id/textViewUnit3"
        android:layout_width="147dp"
        android:layout_height="32dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="244dp"
        android:textColor="@color/purple_200"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/Layout1"
        app:layout_constraintEnd_toEndOf="@+id/textViewUnit2" />

    <TextView
        android:id="@+id/textViewResult3"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="244dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/Layout1"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewUnit2"
        android:layout_width="147dp"
        android:layout_height="32dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="12dp"
        android:textColor="@color/purple_200"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewUnit1"
        app:layout_constraintTop_toBottomOf="@+id/textViewUnit1" />

    <TextView
        android:id="@+id/textViewResult2"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="92dp"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewResult1" />

</androidx.constraintlayout.widget.ConstraintLayout>